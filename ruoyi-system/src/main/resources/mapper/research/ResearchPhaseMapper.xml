<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.research.mapper.ResearchPhaseMapper">
    
    <resultMap type="ResearchPhase" id="ResearchPhaseResult">
        <id property="phaseId"    column="phase_id"    />
        <result property="projectId"    column="project_id"    />
        <result property="phaseName"    column="phase_name"    />
        <result property="sortOrder"    column="sort_order"    />
        <result property="endTime"    column="end_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="projectName"   column="project_name" />
    </resultMap>

    <sql id="selectPhaseVo">
        select p.phase_id, p.project_id, p.phase_name, p.sort_order, p.end_time, p.create_by, p.create_time, p.update_by, p.update_time, rp.project_name
        from ry_research_phase p
        left join ry_research_project rp on p.project_id = rp.project_id
    </sql>

    <select id="selectPhaseList" parameterType="ResearchPhase" resultMap="ResearchPhaseResult">
        <include refid="selectPhaseVo"/>
        <where>  
            <if test="projectId != null "> and p.project_id = #{projectId}</if>
            <if test="phaseName != null  and phaseName != ''"> and p.phase_name like concat('%', #{phaseName}, '%')</if>
        </where>
        order by p.sort_order asc
    </select>
    
    <select id="selectPhaseById" parameterType="Long" resultMap="ResearchPhaseResult">
        <include refid="selectPhaseVo"/>
        where phase_id = #{phaseId}
    </select>
        
    <insert id="insertPhase" parameterType="ResearchPhase" useGeneratedKeys="true" keyProperty="phaseId">
        insert into ry_research_phase
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="projectId != null">project_id,</if>
            <if test="phaseName != null and phaseName != ''">phase_name,</if>
            <if test="sortOrder != null">sort_order,</if>
            <if test="endTime != null">end_time,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="projectId != null">#{projectId},</if>
            <if test="phaseName != null and phaseName != ''">#{phaseName},</if>
            <if test="sortOrder != null">#{sortOrder},</if>
            <if test="endTime != null">#{endTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updatePhase" parameterType="ResearchPhase">
        update ry_research_phase
        <trim prefix="SET" suffixOverrides=",">
            <if test="phaseName != null and phaseName != ''">phase_name = #{phaseName},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where phase_id = #{phaseId}
    </update>

    <delete id="deletePhaseById" parameterType="Long">
        delete from ry_research_phase where phase_id = #{phaseId}
    </delete>

    <delete id="deletePhaseByIds" parameterType="String">
        delete from ry_research_phase where phase_id in 
        <foreach item="phaseId" collection="array" open="(" separator="," close=")">
            #{phaseId}
        </foreach>
    </delete>
    
</mapper>
