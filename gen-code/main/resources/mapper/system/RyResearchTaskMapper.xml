<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.RyResearchTaskMapper">
    
    <resultMap type="RyResearchTask" id="RyResearchTaskResult">
        <result property="taskId"    column="task_id"    />
        <result property="phaseId"    column="phase_id"    />
        <result property="taskName"    column="task_name"    />
        <result property="assignedUserId"    column="assigned_user_id"    />
        <result property="status"    column="status"    />
        <result property="endTime"    column="end_time"    />
        <result property="finishTime"    column="finish_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectRyResearchTaskVo">
        select task_id, phase_id, task_name, assigned_user_id, status, end_time, finish_time, create_by, create_time, update_by, update_time from ry_research_task
    </sql>

    <select id="selectRyResearchTaskList" parameterType="RyResearchTask" resultMap="RyResearchTaskResult">
        <include refid="selectRyResearchTaskVo"/>
        <where>  
            <if test="phaseId != null "> and phase_id = #{phaseId}</if>
            <if test="taskName != null  and taskName != ''"> and task_name like concat('%', #{taskName}, '%')</if>
            <if test="assignedUserId != null "> and assigned_user_id = #{assignedUserId}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="endTime != null "> and end_time = #{endTime}</if>
            <if test="finishTime != null "> and finish_time = #{finishTime}</if>
        </where>
    </select>
    
    <select id="selectRyResearchTaskByTaskId" parameterType="Long" resultMap="RyResearchTaskResult">
        <include refid="selectRyResearchTaskVo"/>
        where task_id = #{taskId}
    </select>

    <insert id="insertRyResearchTask" parameterType="RyResearchTask" useGeneratedKeys="true" keyProperty="taskId">
        insert into ry_research_task
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="phaseId != null">phase_id,</if>
            <if test="taskName != null and taskName != ''">task_name,</if>
            <if test="assignedUserId != null">assigned_user_id,</if>
            <if test="status != null">status,</if>
            <if test="endTime != null">end_time,</if>
            <if test="finishTime != null">finish_time,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="phaseId != null">#{phaseId},</if>
            <if test="taskName != null and taskName != ''">#{taskName},</if>
            <if test="assignedUserId != null">#{assignedUserId},</if>
            <if test="status != null">#{status},</if>
            <if test="endTime != null">#{endTime},</if>
            <if test="finishTime != null">#{finishTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateRyResearchTask" parameterType="RyResearchTask">
        update ry_research_task
        <trim prefix="SET" suffixOverrides=",">
            <if test="phaseId != null">phase_id = #{phaseId},</if>
            <if test="taskName != null and taskName != ''">task_name = #{taskName},</if>
            <if test="assignedUserId != null">assigned_user_id = #{assignedUserId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="finishTime != null">finish_time = #{finishTime},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where task_id = #{taskId}
    </update>

    <delete id="deleteRyResearchTaskByTaskId" parameterType="Long">
        delete from ry_research_task where task_id = #{taskId}
    </delete>

    <delete id="deleteRyResearchTaskByTaskIds" parameterType="String">
        delete from ry_research_task where task_id in 
        <foreach item="taskId" collection="array" open="(" separator="," close=")">
            #{taskId}
        </foreach>
    </delete>

</mapper>